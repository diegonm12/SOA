<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/main_container_sign_up_process_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundlogin"
    android:clipChildren="false"
    android:orientation="vertical"
    tools:context="com.sportec.Activities.ProfileUserActivity">

    <View
        android:id="@+id/activity_profile_user_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <LinearLayout
        android:id="@+id/activity_profile_user_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="182dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_alignParentLeft="true">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/second_card_width"
            android:layout_height="@dimen/second_card_height"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#5cffffff"
            app:cardCornerRadius="@dimen/first_card_radius"
            app:cardElevation="0dp">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/first_card_width"
                android:layout_height="@dimen/first_card_height"
                android:layout_gravity="center"
                app:cardBackgroundColor="#00ffffff"
                app:cardCornerRadius="@dimen/second_card_radius"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/activity_profile_user_name"
                    android:layout_width="@dimen/edit_text_width"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/activity_signup_nombre"
                    android:inputType="textEmailAddress"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="12sp" />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/second_card_width"
            android:layout_height="@dimen/second_card_height"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#5cffffff"
            app:cardCornerRadius="@dimen/first_card_radius"
            app:cardElevation="0dp">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/first_card_width"
                android:layout_height="@dimen/first_card_height"
                android:layout_gravity="center"
                app:cardBackgroundColor="#00ffffff"
                app:cardCornerRadius="@dimen/second_card_radius"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/activity_profile_user_email"
                    android:layout_width="@dimen/edit_text_width"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/email_placeholder"
                    android:inputType="textEmailAddress"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="12sp" />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/second_card_width"
            android:layout_height="@dimen/second_card_height"
            app:cardBackgroundColor="#5cffffff"
            app:cardCornerRadius="@dimen/first_card_radius"
            app:cardElevation="0dp">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/first_card_width"
                android:layout_height="@dimen/first_card_height"
                android:layout_gravity="center"
                app:cardBackgroundColor="#00ffffff"
                app:cardCornerRadius="@dimen/first_card_radius"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/activity_profile_user_password"
                    android:layout_width="@dimen/edit_text_width"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint= "@string/password_placeholder"
                    android:inputType="textPassword"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="12sp" />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <Button
        android:id="@+id/activity_profile_user_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:background="@android:color/transparent"
        android:text="Atras"
        android:textColor="#fff"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:onClick="goBack"
        tools:ignore="RelativeOverlap" />



    <ImageView
        android:id="@+id/activity_profile_user_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        app:srcCompat="@drawable/loader"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/activity_profile_pref_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="126dp"
        android:background="@android:color/transparent"
        android:onClick="editarSeleccionPref"
        android:text="Reelige deportes de preferencua"
        android:textColor="#fff"
        android:textSize="12sp"
        tools:ignore="RelativeOverlap" />

    <Button
        android:id="@+id/activity_profile_user_acept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:background="@android:color/transparent"
        android:onClick="aceptar"
        android:text="Aceptar"
        android:textColor="#fff"
        android:textSize="12sp"
        android:visibility="visible"
        tools:ignore="HardcodedText" />


</RelativeLayout>