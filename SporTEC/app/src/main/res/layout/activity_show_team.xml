<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container_sign_up_process_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundlogin"
    android:clipChildren="false"
    android:orientation="vertical"
    tools:context="com.sportec.Activities.ShowTeamActivity">

    <ImageView
        android:id="@+id/activity_show_team_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="197dp"
        app:srcCompat="@drawable/loader"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_show_team_name_floating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:onClick="goBack"
        app:backgroundTint="#80000000"
        app:srcCompat="@drawable/atras"
        tools:ignore="KeyboardInaccessibleWidget,RelativeOverlap" />

    <TextView
        android:id="@+id/activity_show_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="149dp"
        android:layout_marginRight="149dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#33CC33"
        android:textSize="20dp"
        tools:ignore="HardcodedText" />

    <ListView
        android:id="@+id/activity_show_team_list_member"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@id/activity_show_team_image"
        android:layout_marginBottom="-550dp" />

    <TextView
        android:id="@+id/activity_show_team_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="234dp"
        android:text="MIEMBROS"
        android:textColor="#33CC33"
        android:layout_alignParentLeft="true"
        tools:ignore="HardcodedText" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_show_team_Floating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="40dp"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_input_add"
        app:backgroundTint="@color/com_facebook_blue"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:onClick="VisibleLayout"/>

    <RelativeLayout
        android:layout_height="200dp"
        android:layout_width="250dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="100dp"
        android:background="@color/whiteT"
        android:id="@+id/activity_show_team_add_member"
        android:visibility="invisible">

        <ListView
            android:id="@+id/activity_show_team_listview_add_member"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" />

    </RelativeLayout>


</RelativeLayout>