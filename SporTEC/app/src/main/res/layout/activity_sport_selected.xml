<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sportec.Activities.SportSelectedActivity">


    <Button
        android:id="@+id/activity_sport_selected_butonE"
        android:layout_width="fill_parent"
        android:layout_height="320dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/greenlight"
        android:textSize="40dp"
        android:text="EQUIPOS"
        android:onClick="goToTeam"/>

    <Button
        android:id="@+id/activity_sport_selected_butonR"
        android:layout_width="fill_parent"
        android:layout_height="320dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp"
        android:text="RETOS"
        android:textSize="40dp"
        android:background="@color/bluedark"
        android:layout_alignParentLeft="true"
        android:onClick="goToChallenges"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:onClick="goBack"
        app:backgroundTint="#80000000"
        app:srcCompat="@drawable/atras"
        tools:ignore="KeyboardInaccessibleWidget" />
</RelativeLayout>
