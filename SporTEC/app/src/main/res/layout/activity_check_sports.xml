<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sportec.Activities.CheckSportsActivity">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_check_sports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:clickable="true"
        android:onClick="addSports"
        app:backgroundTint="@color/com_facebook_blue"
        app:srcCompat="@android:drawable/ic_input_add" />

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_check_sport_gridview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/white"
        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:theme="@style/AppTheme"
        android:verticalSpacing="10dp">

    </GridView>


</RelativeLayout>

