<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/main_container_sign_up_process_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:clipChildren="false"
    android:orientation="vertical"

    tools:context=".SignUpProcess">

    <View
        android:id="@+id/view_sign_up_process_activity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <LinearLayout
        android:id="@+id/register_form_sign_up_process_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_alignParentLeft="true">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/second_card_width"
            android:layout_height="@dimen/second_card_height"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#5cffffff"
            app:cardCornerRadius="@dimen/first_card_radius"
            app:cardElevation="0dp">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/first_card_width"
                android:layout_height="@dimen/first_card_height"
                android:layout_gravity="center"
                app:cardBackgroundColor="#00ffffff"
                app:cardCornerRadius="@dimen/second_card_radius"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/nombre_sign_up_process_activity"
                    android:layout_width="@dimen/edit_text_width"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Nombre"
                    android:inputType="textEmailAddress"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="12sp" />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/second_card_width"
            android:layout_height="@dimen/second_card_height"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#5cffffff"
            app:cardCornerRadius="@dimen/first_card_radius"
            app:cardElevation="0dp">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/first_card_width"
                android:layout_height="@dimen/first_card_height"
                android:layout_gravity="center"
                app:cardBackgroundColor="#00ffffff"
                app:cardCornerRadius="@dimen/second_card_radius"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/carrera_sign_up_process_activity"
                    android:layout_width="@dimen/edit_text_width"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Carrera"
                    android:inputType="textEmailAddress"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="12sp" />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="@dimen/second_card_width"
            android:layout_height="@dimen/second_card_height"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#5cffffff"
            app:cardCornerRadius="@dimen/first_card_radius"
            app:cardElevation="0dp">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/first_card_width"
                android:layout_height="@dimen/first_card_height"
                android:layout_gravity="center"
                app:cardBackgroundColor="#00ffffff"
                app:cardCornerRadius="@dimen/second_card_radius"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/carnet_sign_up_process_activity"
                    android:layout_width="@dimen/edit_text_width"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Carnet"
                    android:inputType="numberDecimal"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="12sp" />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/second_card_width"
            android:layout_height="@dimen/second_card_height"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#5cffffff"
            app:cardCornerRadius="@dimen/first_card_radius"
            app:cardElevation="0dp">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/first_card_width"
                android:layout_height="@dimen/first_card_height"
                android:layout_gravity="center"
                app:cardBackgroundColor="#00ffffff"
                app:cardCornerRadius="@dimen/second_card_radius"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/email_sign_up_process_activity"
                    android:layout_width="@dimen/edit_text_width"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/email_placeholder"
                    android:inputType="textEmailAddress"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="12sp" />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/second_card_width"
            android:layout_height="@dimen/second_card_height"
            app:cardBackgroundColor="#5cffffff"
            app:cardCornerRadius="@dimen/first_card_radius"
            app:cardElevation="0dp">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/first_card_width"
                android:layout_height="@dimen/first_card_height"
                android:layout_gravity="center"
                app:cardBackgroundColor="#00ffffff"
                app:cardCornerRadius="@dimen/first_card_radius"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/password_sign_up_process_activity"
                    android:layout_width="@dimen/edit_text_width"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint= "@string/password_placeholder"
                    android:inputType="textPassword"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="12sp" />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/sign_in_button_main_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:text="Registrar"
            android:textSize="12dp"
            android:layout_alignParentRight="true"
            android:onClick="Register"
            />




    </LinearLayout>

    <Button
        android:id="@+id/sign_up_button_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:text="Inicio"
        android:textSize="12dp"
        android:layout_alignParentRight="true"
        android:onClick="goHome"/>



</RelativeLayout>