<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/main_container_sign_up_process_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:clipChildren="false"
    android:orientation="vertical"

    tools:context=".AddRestaurantActivity">

    <View
        android:id="@+id/view_add_restaurant_activity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <LinearLayout
        android:id="@+id/register_form_add_restaurant_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_alignParentLeft="true">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/second_card_width"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#5cffffff"
            app:cardCornerRadius="@dimen/first_card_radius"
            app:cardElevation="0dp">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/first_card_width"
                android:layout_height="@dimen/first_card_height"
                android:layout_gravity="center"
                app:cardBackgroundColor="#00ffffff"
                app:cardCornerRadius="@dimen/second_card_radius"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/nombre_restaurante_add_restaurant_activity"
                    android:layout_width="@dimen/edit_text_width"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Nombre del restaurante"
                    android:inputType="text"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="12sp" />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/second_card_width"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#5cffffff"
            app:cardCornerRadius="@dimen/first_card_radius"
            app:cardElevation="0dp">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/first_card_width"
                android:layout_height="@dimen/first_card_height"
                android:layout_gravity="center"
                app:cardBackgroundColor="#00ffffff"
                app:cardCornerRadius="@dimen/second_card_radius"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/direccion_restaurante_add_restaurant_activity"
                    android:layout_width="@dimen/edit_text_width"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Direccion del restaurante"
                    android:inputType="text"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="12sp" />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/second_card_width"
            android:layout_height="40dp"
            app:cardBackgroundColor="#5cffffff"
            app:cardCornerRadius="@dimen/first_card_radius"
            app:cardElevation="0dp">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/first_card_width"
                android:layout_height="@dimen/first_card_height"
                android:layout_gravity="center"
                app:cardBackgroundColor="#00ffffff"
                app:cardCornerRadius="@dimen/first_card_radius"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/horario_restaurante_add_restaurant_activity"
                    android:layout_width="@dimen/edit_text_width"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint= "Horario del restaurante"
                    android:inputType="text"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="12sp" />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="@dimen/second_card_width"
            android:layout_height="40dp"
            app:cardBackgroundColor="#5cffffff"
            app:cardCornerRadius="@dimen/first_card_radius"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            app:cardElevation="0dp">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/first_card_width"
                android:layout_height="@dimen/first_card_height"
                android:layout_gravity="center"
                app:cardBackgroundColor="#00ffffff"
                app:cardCornerRadius="@dimen/first_card_radius"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/horario1_add_restaurant_activity"
                    android:layout_width="@dimen/edit_text_width"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint= "Horario de desayuno"
                    android:inputType="text"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="12sp" />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/second_card_width"
            android:layout_height="40dp"
            app:cardBackgroundColor="#5cffffff"
            app:cardCornerRadius="@dimen/first_card_radius"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            app:cardElevation="0dp">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/first_card_width"
                android:layout_height="@dimen/first_card_height"
                android:layout_gravity="center"
                app:cardBackgroundColor="#00ffffff"
                app:cardCornerRadius="@dimen/first_card_radius"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/horario2_add_restaurant_activity"
                    android:layout_width="@dimen/edit_text_width"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint= "Horario Almuerzo "
                    android:inputType="text"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="12sp" />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="@dimen/second_card_width"
            android:layout_height="40dp"
            app:cardBackgroundColor="#5cffffff"
            app:cardCornerRadius="@dimen/first_card_radius"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            app:cardElevation="0dp">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/first_card_width"
                android:layout_height="@dimen/first_card_height"
                android:layout_gravity="center"
                app:cardBackgroundColor="#00ffffff"
                app:cardCornerRadius="@dimen/first_card_radius"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/horario3_add_restaurant_activity"
                    android:layout_width="@dimen/edit_text_width"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint= "Horario del cafe"
                    android:inputType="text"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="12sp" />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/second_card_width"
            android:layout_height="40dp"
            app:cardBackgroundColor="#5cffffff"
            app:cardCornerRadius="@dimen/first_card_radius"
            android:layout_gravity="right"
            android:layout_marginTop="-160dp"
            app:cardElevation="0dp">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/first_card_width"
                android:layout_height="@dimen/first_card_height"
                android:layout_gravity="center"
                app:cardBackgroundColor="#00ffffff"
                app:cardCornerRadius="@dimen/first_card_radius"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/platillo1_add_restaurant_activity"
                    android:layout_width="@dimen/edit_text_width"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Platillo de desayuno"
                    android:inputType="text"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="12sp" />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/second_card_width"
            android:layout_height="40dp"
            app:cardBackgroundColor="#5cffffff"
            app:cardCornerRadius="@dimen/first_card_radius"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            app:cardElevation="0dp">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/first_card_width"
                android:layout_height="@dimen/first_card_height"
                android:layout_gravity="center"
                app:cardBackgroundColor="#00ffffff"
                app:cardCornerRadius="@dimen/first_card_radius"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/platillo2_add_restaurant_activity"
                    android:layout_width="@dimen/edit_text_width"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Platillo de almuerzo"
                    android:inputType="text"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="12sp" />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/second_card_width"
            android:layout_height="40dp"
            app:cardBackgroundColor="#5cffffff"
            app:cardCornerRadius="@dimen/first_card_radius"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            app:cardElevation="0dp">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/first_card_width"
                android:layout_height="@dimen/first_card_height"
                android:layout_gravity="center"
                app:cardBackgroundColor="#00ffffff"
                app:cardCornerRadius="@dimen/first_card_radius"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/platillo3_add_restaurant_activity"
                    android:layout_width="@dimen/edit_text_width"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Platillo de cafe"
                    android:inputType="text"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="12sp" />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/add_button_add_restaurant_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:text="Agregar restaurante"
            android:layout_marginLeft="-105dp"
            android:textSize="12dp"
            android:layout_alignParentRight="true"
            android:onClick="createRestaurant"
            />




    </LinearLayout>

    <Button
        android:id="@+id/cancel_add_restaurant_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:text="Cancelar"
        android:textSize="12dp"
        android:layout_alignParentRight="true"
        android:onClick="cancelar"/>



</RelativeLayout>